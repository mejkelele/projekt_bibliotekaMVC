@model IEnumerable<Biblioteka.Models.Ksiazka>
@{
    ViewData["Title"] = "Katalog książek";
    int? selectedKategoriaId = ViewBag.SelectedKategoriaId;
    string? currentFilter = ViewBag.CurrentFilter;
    int bookCount = Model.Count();
}

<h1>@ViewData["Title"]</h1>

<div class="row mb-3">
    <div class="col-md-7">
        <form asp-action="Index" method="get">
            <div class="d-flex">
                <div class="input-group me-2">
                    <label class="input-group-text" for="filterKategoriaId">Kategoria:</label>
                    <select name="kategoriaId" id="filterKategoriaId" class="form-control" onchange="this.form.submit()">
                        <option value="">Wszystkie</option>
                        @if (ViewBag.KategoriaId is SelectList kategoriaList)
                        {
                            @foreach (var item in kategoriaList)
                            {
                                <option value="@item.Value" selected="@(item.Value == selectedKategoriaId?.ToString())">
                                    @item.Text
                                </option>
                            }
                        }
                    </select>
                </div>

                <div class="input-group">
                    <input type="text" name="searchString" value="@currentFilter" class="form-control" placeholder="Szukaj (Tytuł, Autor, ISBN, Tag)..." />
                    <button type="submit" class="btn btn-primary">Szukaj</button>
                    @if (!string.IsNullOrEmpty(currentFilter) || selectedKategoriaId.HasValue)
                    {
                        <a asp-action="Index" class="btn btn-secondary">Wyczyść</a>
                    }
                </div>
            </div>
            <div class="form-text">
                Spacja działa jak AND. Użyj "OR" dla alternatywy, a "-" dla negacji (np. "Potop Sienkiewicz OR -wojna").
            </div>
        </form>
        
        @if (!string.IsNullOrEmpty(currentFilter))
        {
            <form asp-action="SaveSearch" method="post" class="mt-2">
                <div class="input-group">
                    <input type="hidden" name="searchString" value="@currentFilter" />
                    <input type="text" name="nazwaZapisu" placeholder="Nazwa dla tego wyszukiwania..." required class="form-control form-control-sm" />
                    <button type="submit" class="btn btn-sm btn-outline-info">Zapisz Wyszukiwanie</button>
                </div>
            </form>
        }
    </div>
    <div class="col-md-5 text-end">
        @if (User.IsInRole("worker") || User.IsInRole("admin"))
        {
            <a asp-action="Create" class="btn btn-primary">Dodaj Nową Książkę</a>
        }
        @if (User.IsInRole("user") || User.IsInRole("admin"))
        {
            <a asp-action="ViewBasket" class="btn btn-success">Przejdź do Koszyka</a>
        }
    </div>
</div>

@if (TempData["Message"] != null)
{
    <div class="alert alert-info mt-3">@TempData["Message"]</div>
}

<div class="d-flex justify-content-between align-items-center mb-2">
    <h5 class="mb-0">Znaleziono: @bookCount @(bookCount == 1 ? "książka" : "książek")</h5>
</div>

<table class="table table-striped mb-5">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.tytul)</th>
            <th>@Html.DisplayNameFor(model => model.autor)</th>
            <th>@Html.DisplayNameFor(model => model.isbn)</th>
            <th>Kategoria</th>
            <th>@Html.DisplayNameFor(model => model.tag)</th>
            <th>@Html.DisplayNameFor(model => model.stan)</th>
            <th style="width: 20%;">Akcje</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.tytul)</td>
                <td>@Html.DisplayFor(modelItem => item.autor)</td>
                <td>@Html.DisplayFor(modelItem => item.isbn)</td>
                <td>@(item.Kategoria?.Nazwa)</td>
                <td>@Html.DisplayFor(modelItem => item.tag)</td>
                <td>@Html.DisplayFor(modelItem => item.stan)</td>
                <td class="align-middle">
                    @if (User.IsInRole("worker") || User.IsInRole("admin"))
                    {
                        <div class="row g-2 mb-2">
                            <div class="col"><div class="d-grid"><a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-secondary">Edytuj</a></div></div>
                            <div class="col">
                                <form asp-action="Delete" method="post" asp-route-id="@item.Id" class="d-grid">
                                    <button type="submit" class="btn btn-sm btn-danger" onclick="return confirm('Czy na pewno chcesz usunąć tę książkę: @item.tytul?');">Usuń</button>
                                </form>
                            </div>
                        </div>
                    }
                    
                    <div class="row g-2">
                        <div class="col"><div class="d-grid"><a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info">Szczegóły</a></div></div>
                        <div class="col">
                            @if ((User.IsInRole("user") || User.IsInRole("admin")) && item.stan == "Dostępna")
                            {
                                <form asp-action="AddToBasket" method="post" asp-route-id="@item.Id" class="d-grid">
                                    <button type="submit" class="btn btn-sm btn-success">Do koszyka</button>
                                </form>
                            }
                            @if ((User.IsInRole("user") || User.IsInRole("admin")) && item.stan == "Wypożyczona")
                            {
                                <form asp-action="Reserve" method="post" asp-route-id="@item.Id" class="d-grid">
                                    <button type="submit" class="btn btn-sm btn-info">Zarezerwuj</button>
                                </form>
                            }
                        </div>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>