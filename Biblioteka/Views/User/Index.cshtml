@model IEnumerable<Biblioteka.Models.User>
@{
    ViewData["Title"] = "Zarządzanie Użytkownikami";
}

<h1>@ViewData["Title"]</h1>

@if (TempData["Message"] != null)
{
    <div class="alert alert-info mt-3">@((string)TempData["Message"]!)</div>
}

<table class="table">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.Imie)</th>
            <th>@Html.DisplayNameFor(model => model.Nazwisko)</th>
            <th>@Html.DisplayNameFor(model => model.email)</th>
            <th>@Html.DisplayNameFor(model => model.Rola)</th>
            <th>Wypożyczone</th>
            <th>Akcje</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Imie)</td>
                <td>@Html.DisplayFor(modelItem => item.Nazwisko)</td>
                <td>@Html.DisplayFor(modelItem => item.email)</td>
                <td>
                    <span class="badge @(item.Rola == "admin" ? "bg-danger" : item.Rola == "worker" ? "bg-warning text-dark" : "bg-primary")">
                        @Html.DisplayFor(modelItem => item.Rola)
                    </span>
                </td>
                <td>@Html.DisplayFor(modelItem => item.iloscWypKsiazek)</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-secondary">Edytuj Rolę</a>
                </td>
            </tr>
        }
    </tbody>
</table>