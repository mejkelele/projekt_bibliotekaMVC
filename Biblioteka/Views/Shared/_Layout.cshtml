<!DOCTYPE html>
<html lang="pl">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Biblioteka</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
    <link rel="icon" type="image/x-icon" href="~/favicon.svg?v=2" /></head>
<script>
    const getStoredTheme = () => localStorage.getItem('theme')
    const getPreferredTheme = () => {
        const storedTheme = getStoredTheme()
        if (storedTheme) {
            return storedTheme
        }
        return window.matchMedia('(prefers-color-scheme: dark)').matches ? 'dark' : 'light'
    }

    const setTheme = theme => {
        if (theme === 'auto' && window.matchMedia('(prefers-color-scheme: dark)').matches) {
            document.documentElement.setAttribute('data-bs-theme', 'dark')
        } else {
            document.documentElement.setAttribute('data-bs-theme', theme)
        }
    }

    setTheme(getPreferredTheme())

    const updateThemeIcon = (theme) => {
        const btnIcon = document.querySelector('[data-bs-theme-value="icon"]');
        if (!btnIcon) return;
        if (theme === 'dark') btnIcon.className = "bi bi-moon-stars-fill";
        else if (theme === 'light') btnIcon.className = "bi bi-sun-fill";
        else btnIcon.className = "bi bi-circle-half";
    }

    const showActiveTheme = (theme) => {
        localStorage.setItem('theme', theme)
        setTheme(theme)
        updateThemeIcon(theme)
    }

    window.matchMedia('(prefers-color-scheme: dark)').addEventListener('change', () => {
        const storedTheme = getStoredTheme()
        if (storedTheme !== 'light' && storedTheme !== 'dark') {
            setTheme(getPreferredTheme())
        }
    })

    window.addEventListener('DOMContentLoaded', () => {
        const storedTheme = getStoredTheme()
        updateThemeIcon(storedTheme || 'auto')
    })
</script>
<body class="d-flex flex-column min-vh-100">
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand d-flex align-items-center" asp-area="" asp-controller="Home" asp-action="Index">
                    <i class="bi bi-book-half me-2"></i>
                    Biblioteka
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Ksiazka" asp-action="Index">Katalog</a>
                        </li>

                        @if (User.IsInRole("worker") || User.IsInRole("admin"))
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="Wypozyczenie" asp-action="Index">Wypożyczenia</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="Rezerwacja" asp-action="Index">Rezerwacje</a>
                            </li>
                            @if (User.IsInRole("admin"))
                            {
                                <li class="nav-item">
                                    <a class="nav-link" asp-area="" asp-controller="Kategoria" asp-action="Index">Zarządzaj Kategoriami</a>
                                </li>
                            }
                        }
                    </ul>
                    
                    <ul class="navbar-nav">
                        @if (User.IsInRole("user") || User.IsInRole("admin"))
                        {
                            <li class="nav-item">
                                <a class="nav-link me-3" asp-area="" asp-controller="Ksiazka" asp-action="ViewBasket">
                                    <i class="bi bi-cart-fill"></i> Koszyk
                                </a>
                            </li>
                        }

                        @if (User.Identity!.IsAuthenticated)
                        {
                            <li class="nav-item">
                                <a class="nav-link btn btn-sm btn-outline-primary me-2" 
                                   asp-area="" asp-controller="Home" asp-action="UserPage">
                                    Witaj, @User.Identity.Name! (Profil)
                                </a>
                            </li>
                            
                            <li class="nav-item">
                                <form asp-controller="Home" asp-action="Logout" method="post" class="form-inline">
                                    <button type="submit" class="nav-link btn btn-sm btn-outline-danger">Wyloguj</button>
                                </form>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link btn btn-sm btn-success me-2" asp-area="" asp-controller="Home" asp-action="Login">Zaloguj</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link btn btn-sm btn-info" asp-area="" asp-controller="Home" asp-action="Register">Rejestracja</a>
                            </li>
                        }
                    </ul>
                    <ul class="navbar-nav ms-auto"> <li class="nav-item dropdown">
                            <button class="btn btn-link nav-link py-2 px-0 px-lg-2 dropdown-toggle d-flex align-items-center"
                                    id="bd-theme"
                                    type="button"
                                    aria-expanded="false"
                                    data-bs-toggle="dropdown"
                                    data-bs-display="static"
                                    aria-label="Toggle theme (auto)">
                                <i class="bi bi-circle-half" data-bs-theme-value="icon"></i> <span class="d-lg-none ms-2" id="bd-theme-text">Zmień motyw</span>
                            </button>
                            <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="bd-theme-text">
                                <li>
                                    <button type="button" class="dropdown-item d-flex align-items-center" onclick="showActiveTheme('light')">
                                        <i class="bi bi-sun-fill me-2 opacity-50"></i>
                                        Jasny
                                    </button>
                                </li>
                                <li>
                                    <button type="button" class="dropdown-item d-flex align-items-center" onclick="showActiveTheme('dark')">
                                        <i class="bi bi-moon-stars-fill me-2 opacity-50"></i>
                                        Ciemny
                                    </button>
                                </li>
                                <li>
                                    <button type="button" class="dropdown-item d-flex align-items-center" onclick="showActiveTheme('auto')">
                                        <i class="bi bi-circle-half me-2 opacity-50"></i>
                                        Systemowy
                                    </button>
                                </li>
                            </ul>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    
    <div class="container flex-grow-1">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted mt-auto">
        <div class="container">
            &copy; 2025 - HP MP
        </div>
    </footer>
    
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>