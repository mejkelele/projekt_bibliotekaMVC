@model HomeIndexViewModel
@{
    ViewData["Title"] = "Strona Główna";
}

<div class="text-center">
    <h1 class="display-4">Hej, czytelniku!</h1>
    <p>Co byś dziś przeczytał?</p>
</div>

<div class="mt-5">
    <h2 class="mb-4">Ostatnio dodane książki</h2>
    
    @if (Model.DostepneKsiazki != null && Model.DostepneKsiazki.Any())
    {
        <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
            @foreach (var ksiazka in Model.DostepneKsiazki)
            {
                <div class="col">
                    <div class="card h-100 shadow-sm">
                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title">@ksiazka.tytul</h5>
                            <p class="card-text text-muted">@ksiazka.autor</p>
                            <div class="mt-auto">
                                <a asp-controller="Ksiazka" asp-action="Details" asp-route-id="@ksiazka.Id" class="btn btn-sm btn-outline-primary">Szczegóły</a>
                                
                                @if ((User.IsInRole("user") || User.IsInRole("admin")) && ksiazka.stan == "Dostępna")
                                {
                                    <form asp-controller="Ksiazka" asp-action="AddToBasket" asp-route-id="@ksiazka.Id" method="post" class="d-inline">
                                        <button type="submit" class="btn btn-sm btn-success">
                                            <i class="bi bi-cart-plus"></i> Dodaj do koszyka
                                        </button>
                                    </form>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="alert alert-info">
            Brak nowo dodanych książek do wyświetlenia.
        </div>
    }
</div>

<div class="text-center mt-5">
    <a asp-controller="Ksiazka" asp-action="Index" class="btn btn-lg btn-primary">Przeglądaj wszystko</a>
</div>
