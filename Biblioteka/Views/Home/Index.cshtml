@model Biblioteka.Models.HomeIndexViewModel
@{
    ViewData["Title"] = "Witaj w Bibliotece!";
}

<div class="text-center">
    <h1 class="display-3">Biblioteka Centralna</h1>
    <p class="lead">Wypożyczaj, rezerwuj i przeglądaj nasz katalog online.</p>
</div>

<hr />

@if (TempData["Message"] != null)
{
    <div class="alert alert-success">@((string)TempData["Message"]!)</div>
}

<div class="row mb-5">
    <div class="col-md-12">
        <h3 class="mb-3">Dostępne Tytuły (Losowo)</h3>
        
        @if (Model.DostepneKsiazki.Any())
        {
            <div class="row">
                @foreach (var ksiazka in Model.DostepneKsiazki)
                {
                    <div class="col-md-4 mb-4">
                        <div class="card p-3">
                            <h5 class="card-title">@ksiazka.tytul</h5>
                            <p class="card-text">Autor: **@ksiazka.autor**</p>
                            <p class="card-text">Kategoria: @(ksiazka.Kategoria?.Nazwa ?? "N/A")</p>
                            
                            <a asp-controller="Ksiazka" asp-action="Details" asp-route-id="@ksiazka.Id" class="btn btn-sm btn-outline-info">Szczegóły</a>
                            
                            @* Przycisk do koszyka widoczny, jeśli użytkownik jest zalogowany *@
                            @if (User.Identity!.IsAuthenticated)
                            {
                                <form asp-controller="Ksiazka" asp-action="AddToBasket" method="post" asp-route-id="@ksiazka.Id" class="d-inline mt-2">
                                    <button type="submit" class="btn btn-sm btn-success">Dodaj do Koszyka</button>
                                </form>
                            }
                        </div>
                    </div>
                }
            </div>
        }
        else
        {
            <div class="alert alert-warning">Brak dostępnych książek w katalogu.</div>
        }
    </div>
</div>

